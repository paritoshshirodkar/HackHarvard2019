{
    "manifest_version": 2,
    "name": "Amuse Me",
    "version": "0.1",
    "description": "A Chrome extension that distracts you by showing memes relavant to the current webpage",
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "all_frames": true,
        "js": ["content.js"]
      }
    ],
    "permissions": [
        "https://i.redd.it/",
        "https://media0.giphy.com/media/",
        "https://media1.giphy.com/media/",
        "https://media2.giphy.com/media/",
        "https://media3.giphy.com/media/",
        "activeTab",
        "tabs"
    ],
    "browser_action": {
      "default_icon": "detour.png"
    }
  }